@model Libreria.Models.User

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4">Editar Usuario</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Rut" class="form-label"></label>
                    <input asp-for="Rut" class="form-control" />
                    <span asp-validation-for="Rut" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Contrase√±a</label>
                    <input type="password" id="Password" name="Password" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NormalizedUserName" class="form-label"></label>
                    <input asp-for="NormalizedUserName" class="form-control" />
                    <span asp-validation-for="NormalizedUserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NormalizedEmail" class="form-label"></label>
                    <input asp-for="NormalizedEmail" class="form-control" />
                    <span asp-validation-for="NormalizedEmail" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="EmailConfirmed" />
                    <label class="form-check-label" asp-for="EmailConfirmed">
                        @Html.DisplayNameFor(model => model.EmailConfirmed)
                    </label>
                </div>
                <div class="mb-3">
                    <label asp-for="PasswordHash" class="form-label"></label>
                    <input asp-for="PasswordHash" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="SecurityStamp" class="form-label"></label>
                    <input asp-for="SecurityStamp" class="form-control" />
                    <span asp-validation-for="SecurityStamp" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConcurrencyStamp" class="form-label"></label>
                    <input asp-for="ConcurrencyStamp" class="form-control" />
                    <span asp-validation-for="ConcurrencyStamp" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="PhoneNumberConfirmed" />
                    <label class="form-check-label" asp-for="PhoneNumberConfirmed">
                        @Html.DisplayNameFor(model => model.PhoneNumberConfirmed)
                    </label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="TwoFactorEnabled" />
                    <label class="form-check-label" asp-for="TwoFactorEnabled">
                        @Html.DisplayNameFor(model => model.TwoFactorEnabled)
                    </label>
                </div>
                <div class="mb-3">
                    <label asp-for="LockoutEnd" class="form-label"></label>
                    <input asp-for="LockoutEnd" type="date" class="form-control" />
                    <span asp-validation-for="LockoutEnd" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="LockoutEnabled" />
                    <label class="form-check-label" asp-for="LockoutEnabled">
                        @Html.DisplayNameFor(model => model.LockoutEnabled)
                    </label>
                </div>
                <div class="mb-3">
                    <label asp-for="AccessFailedCount" class="form-label"></label>
                    <input asp-for="AccessFailedCount" class="form-control" />
                    <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Role" class="form-label">Rol</label>
                    <select id="Role" name="Role" class="form-select">
                        <option value="Administrator">Administrador</option>
                        <option value="Seller">Vendedor</option>
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
